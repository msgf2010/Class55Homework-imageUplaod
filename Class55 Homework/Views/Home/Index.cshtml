<div class="row">
    <div class="col-md-6 col-md-offset-3 well">
        <form method="post" action="/home/UploadImage" enctype="multipart/form-data">
            <input type="file" name="image" />
            <br />
            <h3>Description:</h3>
            <textarea class="form-control" rows="10" name="description"></textarea>
            <br />
            <button type="button" id="show-password-modal" class="btn btn-info">Upload</button>

            <div class="modal fade image-password" tabindex="-1" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title">Prompt for password<span id="deposit-name"></span></h4>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <label>Please enter a password for this image</label>
                                <input class="form-control" name="password" placeholder="Password" type="text">
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                            <input class="btn btn-primary" type="submit" value="Save">
                        </div>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>

@section scripts {
    <script src="~/Scripts/MyScripts/index.js"></script>
}